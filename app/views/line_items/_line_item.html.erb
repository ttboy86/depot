<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr> 
<% end %>
	
<td>
<%= link_to image_tag('dvd_add.png'), line_items_path(product_id: line_item.product), method: :post, remote: true %>
<%= link_to image_tag('dvd_delete.png'), decrement_line_item_path(line_item), method: :post, remote: true %> <%= line_item.quantity %> &times;</td>
<td><%= line_item.product.title %></td>
<td class="item_price"><%= number_to_currency(line_item.total_price, :precision => 2, :separator => ",", :delimeter => ".", :unit => "R$") %></td>
</tr>