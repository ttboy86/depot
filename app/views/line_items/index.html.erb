<h1>Listing line_items</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Cart</th>
    <th>Quantity</th>
    <th>Actions</th>

  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.product.title %></td>
    <td><%= line_item.cart_id %></td>
    <td><%= line_item.quantity %></td>
    <td><%= link_to 'Show', line_item %>
    <%= link_to 'Edit', edit_line_item_path(line_item) %>
	<%= button_to 'Decrement', decrement_line_item_path(line_item) %>
    <%= link_to 'Destroy', line_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Line item', new_line_item_path %>
